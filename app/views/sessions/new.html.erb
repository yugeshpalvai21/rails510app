<h1>User Login</h1>

<%= form_tag login_path do  %>
    <div>
        <%= label_tag :email %>
        <%= email_field_tag :email %>
    </div>
    <br />
    <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>
    <br />
    <br />
    <div>
        <%= submit_tag "Login" %>
    </div>
<% end %>

